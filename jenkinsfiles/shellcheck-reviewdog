pipeline {
  agent { dockerfile true }
  stages {

    stage('Build'){
      steps{
        sh '''
          for file in $(find . -name "src/*.sh"); do shellcheck --external-sources --shell=bash --exclude=SC2016,SC2181,SC2034,SC2154,SC2001,SC1090,SC1091,SC2120 $file; done;
        '''
      }
    }

  }
}

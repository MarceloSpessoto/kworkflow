pipeline {
  agent { 
    dockerfile {
      filename 'Dockerfile'
      args '--privileged=true'
    }  
  }
  stages {

    stage('Build'){
      steps{
        sh '''
          apt update -y
          apt install -y shunit2 bc sqlite3 bsdmainutils libxml-xpath-perl podman
          ./run_tests.sh --integration
        '''
      }
    }

  }
}
